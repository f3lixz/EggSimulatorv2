<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">
    <TextView
        android:id="@+id/playerLevelText"
        android:paddingTop="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"
        android:text="@string/player_level_text"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <include android:id="@+id/levelChooser" layout="@layout/level_chooser_widget"/>

    <TextView
        android:paddingTop="26dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"
        android:text="@string/choose_egg_size" />
    <LinearLayout
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerHorizontal="true"
                android:layout_width="75dp"
                android:layout_height="97dp"
                android:src="@drawable/egg"
                android:id="@+id/egg1" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="50dp"
                android:textColor="@android:color/white"
                android:background="#99000000"
                android:layout_alignBottom="@+id/egg1"
                android:layout_centerHorizontal="true"
                android:text="@string/twokm"/>
            <ImageView
                android:id="@+id/disabledView1"
                android:visibility="gone"
                android:src="@drawable/egg_mask"
                android:layout_centerHorizontal="true"
                android:layout_width="75dp"
                android:layout_height="97dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerHorizontal="true"
                android:layout_width="75dp"
                android:layout_height="97dp"
                android:src="@drawable/egg"
                android:id="@+id/egg2" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="50dp"
                android:textColor="@android:color/white"
                android:background="#99000000"
                android:layout_alignBottom="@+id/egg2"
                android:layout_centerHorizontal="true"
                android:text="@string/fivekm"/>
            <ImageView
                android:id="@+id/disabledView2"
                android:visibility="gone"
                android:layout_centerHorizontal="true"
                android:src="@drawable/egg_mask"
                android:layout_width="75dp"
                android:layout_height="97dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerHorizontal="true"
                android:layout_width="75dp"
                android:layout_height="97dp"
                android:src="@drawable/egg"
                android:id="@+id/egg3" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="50dp"
                android:textColor="@android:color/white"
                android:background="#99000000"
                android:layout_alignBottom="@+id/egg3"
                android:layout_centerHorizontal="true"
                android:text="@string/tenkm"/>
            <ImageView
                android:id="@+id/disabledView3"
                android:visibility="gone"
                android:layout_centerHorizontal="true"
                android:src="@drawable/egg_mask"
                android:layout_width="75dp"
                android:layout_height="97dp"/>
        </RelativeLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/continueButton"
        android:layout_margin="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/general_continue" />

</LinearLayout>
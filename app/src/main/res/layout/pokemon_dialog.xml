<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:minWidth="400dp"
    android:background="@color/backgroundColor">
    <com.triggertrap.seekarc.SeekArc
        android:id="@+id/seekArc"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_gravity="center"
        android:padding="35dp"
        app:enabled="false"
        app:rotation="180"
        app:startAngle="90"
        app:sweepAngle="180"
        app:touchInside="true" />
    <ImageView
        android:id="@+id/pokeImage"
        android:layout_marginTop="62dp"
        android:layout_width="384px"
        android:layout_height="384px"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:src="@color/colorPrimary"
        />
    <TextView
        android:padding="6dp"
        android:id="@+id/nameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pokepop_title"
        android:textSize="22sp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/newText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="@color/lightGreen"
        android:text="@string/general_new"
        android:textStyle="italic"
        android:visibility="gone"
        android:layout_alignBottom="@id/pokeImage"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:padding="6dp"
        android:id="@+id/lvlText"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pokepop_level"
        android:background="#33FFFFFF"
        android:layout_alignBottom="@id/pokeImage"
        android:layout_alignParentLeft="true"
        />

    <TextView
        android:id="@+id/cpText"
        android:textSize="18sp"
        android:layout_marginTop="62dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/pokepop_cp"
        />
    <TextView
        android:padding="6dp"
        android:id="@+id/hpText"
        android:textSize="18sp"
        android:background="#33FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/pokeImage"
        android:layout_alignParentRight="true"
        android:text="@string/pokepop_hp"
        />
    <TextView
        android:padding="6dp"
        android:id="@+id/ivCPText"
        android:textSize="18sp"
        android:background="#33FFFFFF"
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pokeImage"
        android:layout_centerHorizontal="true"
        android:text="@string/pokepop_iv_cp"
        />
    <ProgressBar
        android:id="@+id/iv_progress_cp"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_below="@id/ivCPText"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:layout_marginRight="18dp"
        android:layout_marginLeft="18dp"
        android:progress="25"/>
    <TextView
        android:padding="6dp"
        android:id="@+id/ivHPText"
        android:textSize="18sp"
        android:background="#33FFFFFF"
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_progress_cp"
        android:layout_centerHorizontal="true"
        android:text="@string/pokepop_iv_hp"
        />
    <ProgressBar
        android:id="@+id/iv_progress_hp"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_below="@id/ivHPText"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:layout_marginRight="18dp"
        android:layout_marginLeft="18dp"
        android:progress="25"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/iv_progress_hp"
        android:layout_marginTop="14dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/ok_button"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/general_ok"/>
        <Button
            android:id="@+id/save_button"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/general_save"/>
    </LinearLayout>

</RelativeLayout>